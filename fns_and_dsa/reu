from shopping_list_manager import display_menu, main

def test_display_menu(capsys):
    display_menu()
    captured = capsys.readouterr()
    assert "Shopping List Manager" in captured.out
    assert "1. Add Item" in captured.out
    assert "2. Remove Item" in captured.out
    assert "3. View List" in captured.out
    assert "4. Exit" in captured.out
    
