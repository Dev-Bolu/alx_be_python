class Product:
    def __init__(self,name,price,quantity):
        self.name = name             # Attribute for product name
        self.price = price           # Attribute for product price per unit
        self.quantity = quantity     # Attribute for product quantity in stock
        
    def calculate_total_value(self):
        return self.price * self.quantity
    
product1 = Product("Laptop", 150000, 1)

print(f"the price of {product1.quantity}, {product1.name} is {product1.calculate_total_value()} ")
        
        